generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Users {
    id          Int      @id @default(autoincrement())
    name        String
    email       String   @unique
    faceString  String
    createdAt   DateTime @default(now())
    attendances Attendances[]
}

model Attendances {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    temperature String?
    status      String?
    location    String?
    user        Users     @relation(fields: [userEmail], references: [email])
    userEmail   String
}
