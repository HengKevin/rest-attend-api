generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Users {
    id               Int           @id @default(autoincrement())
    name             String
    email            String        @unique
    faceString       String
    checkIn          String?
    checkOut         String?
    location         String?
    createdAt        DateTime      @default(now())
    attendances      Attendances[]
    historicAtts     HistoricAtt[]
}

model Attendances {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    date        String?
    temperature String?
    status      String?
    location    String?
    time        String?
    user        Users    @relation(fields: [userEmail], references: [email], onDelete: Cascade)
    userEmail   String
}

model AttendanceRule {
    id          Int     @id @default(autoincrement())
    earlyMinute String?
    lateMinute  String?
    offDutyTime String?
    onDutyTime  String?
}

model HistoricAtt {
    id          Int      @id @default(autoincrement())
    date        String?
    temperature String?
    location    String?
    checkIn     String?
    checkOut    String?
    attendanceStatus String?
    checkOutStatus String?
    user        Users    @relation(fields: [userEmail], references: [email], onDelete: Cascade)
    userEmail   String

    @@unique([date, userEmail])
}

model Location {
    id      Int     @id @default(autoincrement())
    name    String?
}